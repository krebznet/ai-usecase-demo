{
  "action_mappings": [
    {
      "path": "/welcome",
      "type": "com.trucklease.actions.WelcomeAction",
      "name": "applicantForm",
      "scope": "session",
      "validate": false,
      "input": null,
      "forwards": {
        "success": "/jsp/welcome.jsp"
      }
    },
    {
      "path": "/applicantInfo",
      "type": "com.trucklease.actions.ApplicantInfoAction",
      "name": "applicantForm",
      "scope": "session",
      "validate": true,
      "input": "/jsp/applicant-info.jsp",
      "forwards": {
        "success": "/vehiclePreference.do",
        "failure": "/jsp/applicant-info.jsp"
      }
    },
    {
      "path": "/vehiclePreference",
      "type": "com.trucklease.actions.VehiclePreferenceAction",
      "name": "vehiclePreferenceForm",
      "scope": "session",
      "validate": true,
      "input": "/jsp/vehicle-preference.jsp",
      "forwards": {
        "success": "/financialInfo.do",
        "back": "/jsp/applicant-info.jsp"
      }
    },
    {
      "path": "/financialInfo",
      "type": "com.trucklease.actions.FinancialInfoAction",
      "name": "financialInfoForm",
      "scope": "session",
      "validate": true,
      "input": "/jsp/financial-info.jsp",
      "forwards": {
        "success": "/backgroundCheck.do",
        "back": "/jsp/vehicle-preference.jsp"
      }
    },
    {
      "path": "/backgroundCheck",
      "type": "com.trucklease.actions.BackgroundCheckAction",
      "name": "backgroundCheckForm",
      "scope": "session",
      "validate": true,
      "input": "/jsp/background-check.jsp",
      "forwards": {
        "success": "/leaseReview.do",
        "back": "/jsp/financial-info.jsp"
      }
    },
    {
      "path": "/leaseReview",
      "type": "com.trucklease.actions.LeaseReviewAction",
      "name": "leaseAgreementForm",
      "scope": "session",
      "validate": false,
      "input": null,
      "forwards": {
        "success": "/jsp/lease-review.jsp",
        "back": "/jsp/background-check.jsp"
      }
    },
    {
      "path": "/submitApplication",
      "type": "com.trucklease.actions.SubmitApplicationAction",
      "name": null,
      "scope": "session",
      "validate": false,
      "input": null,
      "forwards": {
        "success": "/jsp/confirmation.jsp",
        "failure": "/jsp/error.jsp"
      }
    }
  ],
